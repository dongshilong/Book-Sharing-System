<div class="container">
	<div class="row">
		<h2 class="page-header">发现圈子<a href="<%= new_circle_path %>" class="pull-right btn btn-primary"><i class="icon icon-plus icon-white"></i>创建圈子</a>
		</h2>
	</div>
	<div class="circle-list">
		<% @circles.each do |circle| %>
		<div class="circle-item">
			<div class="pic">
				<%= link_to(image_tag("circle/#{circle.logo}", :title => circle.name, :class => 'img-circle'), circle) %>
			</div>
			<div class="content">
				<div class="title">
					<h3><%= link_to circle.name, circle %></h3>
				</div>
				<div class="info"><%= circle.users.count %> 位书友 </div>
				<p><%= circle.introduction %></p>
				<div class="join">
					<a href="http://www.douban.com/group/Sharing/?action=join&amp;ck=None" class="btn btn-link"><i>+</i>加入圈子</a>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>

