<%= form_for @user, :html => {:class=>"form-horizontal well"} do |f| %>
<fieldset>
	<legend>
		注册
		<%= link_to "已有帐号？登录", { :controller => "sessions", :action => "new" }, :class => "btn btn-link btn-large pull-right" %><i class='icon-arrow-right'></i>
	</legend>
	<% if @user.errors.any? %>
	<div class="error_messages">
		<ul>
			<% for message in @user.errors.full_messages %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="control-group">
		<label class="control-label" for="username">昵称</label>
		<div class="controls">
			<%= f.text_field :username %>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="email">邮箱</label>
		<div class="controls">
			<%= f.text_field :email %>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="password">密码</label>
		<div class="controls">
			<%= f.password_field :password %>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="password">密码确认</label>
		<div class="controls">
			<%= f.password_field :password_confirmation %>
		</div>
	</div>
	<div class="control-group">
		<%= f.submit '注册', :class => "btn btn-primary btn-large pull-right" %>
	</div>
</fieldset>
<% end %>